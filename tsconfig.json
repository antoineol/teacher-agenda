{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es2015"
		],
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"noImplicitAny": true,
		"types": [
			"firebase"
		]
	},
	"exclude": [
		"bkp",
		"old",
		"node_modules",
		"resources",
		"www",
		"platform",
		"plugins"
	],
	"compileOnSave": true,
	"atom": {
		"rewriteTsconfig": false
	}
}
